{
  "name": "fawasel-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:site": "npm run assets:build && npm run content:pipeline && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "assets:extract": "node scripts/extractPdfPages.mjs",
    "assets:manifest": "node scripts/buildPageManifest.mjs",
    "assets:optimize": "node scripts/optimizeAssets.mjs",
    "assets:build": "npm run assets:extract && npm run assets:manifest && npm run assets:optimize",
    "content:ocr": "node scripts/ocrCoreArabic.mjs",
    "content:translate": "node scripts/translateCoreToEnglish.mjs",
    "content:build": "node scripts/buildContentJson.mjs",
    "content:pipeline": "npm run content:ocr && npm run content:translate && npm run content:build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "i18next": "^25.8.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.4",
    "react-intersection-observer": "^10.0.2",
    "react-router-dom": "^7.13.0",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
